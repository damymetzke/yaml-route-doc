<ul class="route">
    <h1>{{name}}</h1>
    {{#each method}}

    <div class="method">
        <h2>{{verb}}</h2>

        <h3>Description</h3>
        <p class="description">
            {{description}}
        </p>

        {{#if requestType}}
        <h3>Request Type</h3>
        <p class="request-type">
            {{requestType}}
        </p>
        {{/if}}

        {{#if responseType}}
        <h3>Response Type</h3>
        <p class="response-type">
            {{responseType}}
        </p>
        {{/if}}

        {{#if requestparameters}}
        <h3>Request Parameters</h3>
        <ul class="request-parameters">

            {{#each requestparameters}}

            <li class="request-parameter-item">
                <h4>{{key}}</h4>
                <h5>Description</h5>
                <p class="description">
                    {{description}}
                </p>
                <h5>Type</h5>
                <p class="type">
                    {{type}}
                </p>

                {{#if restrictions}}
                <h5>Restrictions</h5>
                <p class="restrictionss">
                    {{restrictions}}
                </p>
                {{/if}}

            </li>

            {{/each}}

        </ul>
        {{/if}}

        {{#if responseParameters}}
        <h3>Response Parameters</h3>
        <ul class="response-parameters">

            {{#each responseParameters}}

            <li class="response-parameter-item">
                <h4>{{key}}</h4>
                <h5>Description</h5>
                <p class="description">
                    {{description}}
                </p>
                <h5>Type</h5>
                <p class="type">
                    {{type}}
                </p>

                {{#if restrictions}}
                <h5>Restrictions</h5>
                <p class="restrictionss">
                    {{restrictions}}
                </p>
                {{/if}}
            </li>

            {{/each}}

        </ul>
        {{/if}}

    </div>

    {{/each}}

</ul>